---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.vue';
import Footer from '../components/Footer.astro';
import Contact from '../components/Contact.astro';
import Review from '../components/Reviews/Review.astro';
import NirmalaGallery from '../components/NirmalaGallery.vue';
import NirmalaImageGallery from '../components/NirmalaImageGallery.vue';
import ImageGallery from '../components/Gallery/ImageGallery.vue';

import nirmalaData from '../data/nirmala-data.json';

import '@fontsource/prata';
import '@fontsource-variable/raleway';
import '@fontsource/poppins';
import '../styles/global.css';
---

<Layout>
  <Navbar client:load />
  
  <!-- Hero Section with top padding for fixed navbar -->
  <div class="pt-20">
    <NirmalaGallery 
      client:load
      images={nirmalaData.gallery}
      card={nirmalaData}
    />
  </div>

  <!-- About Section -->
  <div class="w-full flex flex-col justify-center items-center gap-8 lg:gap-16 lg:px-64 px-4 py-16 lg:py-32">
    <h1 class="lg:text-5xl text-2xl font-bold text-center">ABOUT NIRMALA MANSION</h1>
    
    <div class="w-full">
      <div class="block">
        <p class="text-center lg:text-3xl/10 prata px-10">
          {nirmalaData.description}
        </p>
      </div>
    </div>

    <!-- Key Features -->
    <div class="w-full max-w-4xl">
      <h2 class="text-3xl font-bold text-center mb-8">Key Features</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {nirmalaData.keyFeatures.map((feature) => (
          <div class="flex items-start gap-4 p-6 bg-gray-50 rounded-lg">
            <div class="w-2 h-2 bg-green-600 rounded-full mt-3 flex-shrink-0"></div>
            <div>
              <h3 class="font-semibold text-lg mb-2">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Property Details -->
    <div class="w-full max-w-4xl">
      <h2 class="text-3xl font-bold text-center mb-8">Property Details</h2>
      <div class="bg-white border rounded-lg p-8 shadow-sm">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {Object.entries(nirmalaData.propertyDetails).map(([key, value]) => (
            <div class="flex justify-between items-center py-2 border-b border-gray-100">
              <span class="font-medium capitalize">{key.replace(/([A-Z])/g, ' $1')}</span>
              <span class="text-gray-600">{value}</span>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Amenities Grid -->
    <div class="w-full max-w-6xl" id="amenities">
      <h2 class="text-3xl font-bold text-center mb-8">Amenities</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {nirmalaData.amenities.map((amenity) => (
          <div class="text-center p-4 bg-gray-50 rounded-lg hover:shadow-md transition-shadow">
            <div class="text-3xl mb-2">{amenity.icon}</div>
            <h3 class="font-medium text-sm">{amenity.name}</h3>
          </div>
        ))}
      </div>
    </div>

    <!-- Gallery Grid -->
    <div class="w-full max-w-6xl">
      <NirmalaImageGallery client:load images={nirmalaData.gallery} />
    </div>
  </div>

  <!-- Reviews -->
  <Review />

  <!-- Contact -->
  <div id="contact">
    <Contact />
  </div>

  <Footer />
</Layout>
