---
import data from '../../data/reviewdata.json'
import ReviewCard from './ReviewCard.vue'
---

<div
  class="w-full flex flex-col justify-center items-center gap-8 lg:gap-16 lg:px-16 px-4 py-16 lg:pb-32 bg-white"
>
  <h1 class="lg:text-6xl text-2xl font-bold text-center">REVIEWS</h1>

  <div class="w-full flex justify-around">
    {data.reviews.map((review) => (
      <ReviewCard
        review={review}
      />
    ))}
  </div> 
</div>
