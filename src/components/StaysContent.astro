---
import StayCard from "./StayCard.vue"
import data from '../data/propertydata.json';
---

<div
  class="w-full flex flex-col justify-center items-center gap-8 lg:gap-16 lg:px-64 px-4 py-16 lg:pb-32 bg-white"
>
  <h1 class="lg:text-4xl text-2xl font-bold text-center">STAYS</h1>

  <div class="w-full"></div>
    <div class="lg:flex gap-10 w-full">

      {data.rooms.map((room) => (
        <StayCard room={room} class:list={"lg:w-1/3 my-10"} />
      ))}
      </div>

</div>



<style>
  .collapse-content {
    transition: all 0.3s ease-in-out;
  }
</style>
